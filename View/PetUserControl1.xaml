            <TextBox x:Name="textBox"  Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="150,338,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="282" Background="{x:Null}" FontSize="16" FontWeight="Bold" Foreground="Black" />
            <TextBox x:Name="textBox_Copy" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="150,372,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="282" Background="{x:Null}" FontSize="16" FontWeight="Bold" Foreground="Black" />
            <TextBox x:Name="textBox_Copy1" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="150,405,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="282" Background="{x:Null}" FontSize="16" FontWeight="Bold" Foreground="Black" />
