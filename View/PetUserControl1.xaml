            <Label x:Name="label_Copy4" Content="BusinessHours：" HorizontalAlignment="Left" Margin="10,493,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.55,-0.846" Height="29" Width="162" FontFamily="Lucida Calligraphy" FontWeight="Bold" FontSize="14" Grid.Column="1"/>
            <Label x:Name="label_Copy5" Content="Emergency：" HorizontalAlignment="Left" Margin="10,532,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.55,-0.846" Height="29" Width="162" FontFamily="Lucida Calligraphy" FontWeight="Bold" FontSize="14" Grid.Column="1"/>
            <Label x:Name="label_Copy6" Content="OutpatientProject：" HorizontalAlignment="Left" Margin="10,560,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.55,-0.846" Height="29" Width="162" FontFamily="Lucida Calligraphy" FontWeight="Bold" FontSize="14" Grid.Column="1"/>
            <Label x:Name="label_Copy7" Content="Equipment：" HorizontalAlignment="Left" Margin="10,588,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.55,-0.846" Height="29" Width="162" FontFamily="Lucida Calligraphy" FontWeight="Bold" FontSize="14" Grid.Column="1"/>
