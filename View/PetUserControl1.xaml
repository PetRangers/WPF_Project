            <ComboBox x:Name="ComHospitalName" HorizontalAlignment="Left" Margin="35,61,0,0" VerticalAlignment="Top" Width="120" Height="31" DropDownClosed="ComHospitalName_DropDownClosed" Background="{x:Null}"  Grid.Column="1" SelectionChanged="ComHospitalName_SelectionChanged" FontSize="14"/>
            <ComboBox DropDownClosed="ComAddressArea_DropDownClosed" x:Name="ComAddressArea" Grid.Column="1" HorizontalAlignment="Left" Margin="198,61,0,0" VerticalAlignment="Top" Width="120" Height="31" FontSize="14" />
            <ComboBox DropDownClosed="ComPetRace_DropDownClosed" x:Name="ComPetRace" Grid.Column="1" HorizontalAlignment="Left" Margin="374,0,0,918" VerticalAlignment="Bottom" Width="120" Height="31" RenderTransformOrigin="0.467,-1.667" FontSize="14" >

            </ComboBox>

        </Grid>
    </Viewbox>
</UserControl>
