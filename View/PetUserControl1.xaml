            <Label x:Name="label_Copy1" Content="AddressArea：" HorizontalAlignment="Left" Margin="10,403,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.55,-0.846" Height="29" Width="162" FontFamily="Lucida Calligraphy" FontWeight="Bold" FontSize="14" Grid.Column="1"/>
            <Label x:Name="label_Copy2" Content="HospitalPhone：" HorizontalAlignment="Left" Margin="10,433,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.55,-0.846" Height="29" Width="162" FontFamily="Lucida Calligraphy" FontWeight="Bold" FontSize="14" Grid.Column="1"/>
