            <TextBox x:Name="textBox_Copy4" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="150,493,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="282" Background="{x:Null}" FontSize="16" FontWeight="Bold" Foreground="Black" />
            <TextBox x:Name="textBox_Copy5" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="150,534,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="282" Background="{x:Null}" FontSize="16" FontWeight="Bold" Foreground="Black"  />
            <TextBox x:Name="textBox_Copy6" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="150,562,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="282" Background="{x:Null}" FontSize="16" FontWeight="Bold" Foreground="Black" />
            <TextBox x:Name="textBox_Copy7" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="150,590,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="282" Background="{x:Null}" FontSize="16" FontWeight="Bold" Foreground="Black" />
            <TextBox x:Name="textBox_Copy8" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="150,636,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="282" Background="{x:Null}" FontSize="16" FontWeight="Bold" Foreground="Black" />
